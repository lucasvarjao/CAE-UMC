<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/caeumccolor800</item>
        <item name="android:colorPrimaryDark">@color/caeumccolor900</item>
        <item name="android:colorAccent">@color/deeporangea400</item>

        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/Widget.ActionMode</item>
        <item name="android:actionModeStyle">@style/Widget.ActionMode</item>



    </style>

    <style name="Widget.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="android:background">@color/caeumccolor800</item>
        <item name="background">@color/caeumccolor800</item>
    </style>

    <style name="AppDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="colorPrimary">@color/caeumccolor800</item>
        <item name="colorPrimaryDark">@color/caeumccolor900</item>
        <item name="colorAccent">@color/deeporangea400</item>

        <item name="android:windowBackground">@android:color/background_light</item>

    </style>



</resources>
