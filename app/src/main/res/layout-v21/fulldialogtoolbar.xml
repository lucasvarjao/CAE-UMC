<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"


  >

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"

        android:background="@color/primary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:id="@+id/tool_bar_dialog"
        android:elevation="4dp"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"

        android:minHeight="?attr/actionBarSize" />




    <android.support.design.widget.TextInputLayout
        android:id="@+id/txtInputDisciplina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="64dp"
        android:layout_marginRight="16dp"
       >
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:hint="@string/disciplina"
        android:textSize="22sp"
        android:typeface="sans"
        android:ems="10"
        android:singleLine="true"
        android:maxLength="35"
        android:inputType="textCapSentences"

        android:imeOptions="actionNext">

        <requestFocus />
    </EditText>
    </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="0/35"
            android:id="@+id/lblContador"
            android:layout_gravity="right"
            android:textSize="12sp"
            android:layout_below="@+id/txtInputDisciplina"
            android:layout_alignRight="@+id/txtInputDisciplina"
            android:layout_alignEnd="@+id/txtInputDisciplina" />


    <android.support.design.widget.TextInputLayout
        android:id="@+id/txtInputM1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_alignLeft="@+id/txtInputDisciplina"
        android:layout_alignStart="@+id/txtInputDisciplina"
        android:layout_below="@+id/txtInputDisciplina"
        >
    <EditText
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/txtM1"
        android:maxLength="5"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:hint="M1"
         />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/txtInputPI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtInputM1"
        android:layout_toRightOf="@+id/txtInputM1"
        android:layout_marginLeft="8dp"
        >
    <EditText
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/txtPI"
        android:maxLength="5"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:hint="PI"
         />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/txtInputM2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtInputPI"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/txtInputPI"
        >
    <EditText
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/txtM2"
        android:maxLength="5"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:hint="ND"
         />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/txtInputEX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtInputM2"
        android:layout_toRightOf="@+id/txtInputM2"
        android:layout_toEndOf="@+id/txtInputM2"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="16dp"
        >
    <EditText
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/txtEX"
        android:maxLength="5"
        android:singleLine="true"
        android:hint="EX"
        android:imeOptions="actionDone"
        />
    </android.support.design.widget.TextInputLayout>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DP/Adaptação"
        android:id="@+id/chbDP"
        android:layout_below="@+id/txtInputM1"
        android:layout_alignLeft="@+id/txtInputM1"
        android:layout_alignStart="@+id/txtInputM1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/material_grey_600"
        android:text="Insira somente a nota da M1 para obter o mínimo necessário na ND (Sem a PI)."
        android:id="@+id/textView12"
        android:textSize="12sp"
        android:layout_alignLeft="@+id/txtInputM1"
        android:layout_below="@+id/txtInputM1"
        android:layout_marginTop="48dp"
        android:layout_marginRight="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/material_grey_600"
        android:text="Insira a nota da M1 e a nota da PI para obter o mínimo necessário na ND (Deixe o campo 'ND' em branco)."
        android:id="@+id/textView13"
        android:textSize="12sp"
        android:layout_alignLeft="@+id/textView12"
        android:layout_below="@+id/textView12"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/material_grey_600"
        android:text="Após todas as notas serem adicionadas, caso a nota final não for o suficiente para ser aprovado, o sistema mostrará a nota mínima necessária no exame."
        android:id="@+id/textView14"
        android:textSize="12sp"
        android:layout_alignLeft="@+id/textView13"
        android:layout_below="@+id/textView13"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"/>


</RelativeLayout>
</ScrollView>