<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="72dp"
    android:padding="8dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Resistência dos Materiais III"
        android:id="@+id/lblMateria"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="M1:"
        android:id="@+id/textView3"
        android:layout_below="@+id/lblMateria"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="-"
        android:id="@+id/lblM1"
        android:layout_below="@+id/lblMateria"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="1dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="PI:"
        android:id="@+id/textView5"
        android:layout_alignBottom="@+id/lblM1"
        android:layout_toRightOf="@+id/lblM1"
        android:layout_toEndOf="@+id/lblM1"
        android:layout_marginLeft="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="-"
        android:id="@+id/lblPI"
        android:layout_alignTop="@+id/textView5"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5"
        android:layout_marginLeft="1dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="ND:"
        android:id="@+id/textView7"
        android:layout_alignTop="@+id/lblPI"
        android:layout_toRightOf="@+id/lblPI"
        android:layout_toEndOf="@+id/lblPI"
        android:layout_marginLeft="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="-"
        android:id="@+id/lblM2"
        android:layout_alignTop="@+id/textView7"
        android:layout_toRightOf="@+id/textView7"
        android:layout_toEndOf="@+id/textView7"
        android:layout_marginLeft="1dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="EX:"
        android:id="@+id/textView9"
        android:layout_alignBottom="@+id/lblM2"
        android:layout_toRightOf="@+id/lblM2"
        android:layout_toEndOf="@+id/lblM2"
        android:layout_marginLeft="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="-"
        android:id="@+id/lblExame"
        android:layout_alignBottom="@+id/textView9"
        android:layout_toRightOf="@+id/textView9"
        android:layout_toEndOf="@+id/textView9"
        android:layout_marginLeft="1dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="NF:"
        android:id="@+id/textView11"
        android:layout_alignBottom="@+id/lblExame"
        android:layout_toRightOf="@+id/lblExame"
        android:layout_toEndOf="@+id/lblExame"
        android:layout_marginLeft="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="-"
        android:id="@+id/lblNotaFinal"
        android:layout_alignBottom="@+id/textView11"
        android:layout_toRightOf="@+id/textView11"
        android:layout_toEndOf="@+id/textView11"
        android:layout_marginLeft="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="3"
        android:height="72dp"
        android:id="@+id/swipeable_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/txt_delete"
            android:gravity="center_vertical"
            android:text="Excluído"
            android:clickable="false"
            android:layout_weight="2"
            android:hapticFeedbackEnabled="true"
            android:textColor="@android:color/white"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/txt_undo"
            android:text="Desfazer"
            android:clickable="false"
            android:layout_weight="1"
            android:textColor="@color/caeumccolor800"/>

    </LinearLayout>

</RelativeLayout>