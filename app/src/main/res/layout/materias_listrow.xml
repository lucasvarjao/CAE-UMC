<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="16dp"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/resmat"
        android:id="@+id/lblMateria"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/m11"
        android:id="@+id/textView3"
        android:layout_below="@+id/lblMateria"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/hifen"
        android:id="@+id/lblM1"
        android:layout_below="@+id/lblMateria"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        android:layout_marginLeft="3dp"
        android:layout_marginStart="3dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"

        android:text="@string/pii"
        android:id="@+id/textView5"
        android:layout_alignBottom="@+id/lblM1"
        android:layout_toRightOf="@+id/lblM1"
        android:layout_toEndOf="@+id/lblM1"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_alignTop="@+id/lblM1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"

        android:text="@string/hifen"
        android:id="@+id/lblPI"
        android:layout_alignTop="@+id/textView5"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5"
        android:layout_marginLeft="3dp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layoutm2"
        android:layout_alignTop="@+id/lblPI"
        android:layout_toRightOf="@+id/lblPI"
        android:layout_toEndOf="@+id/lblPI"
        android:layout_marginLeft="8dp"
        android:background="@android:color/darker_gray">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:layout_marginLeft="3dp"
        android:layout_marginBottom="3dp"
        android:textSize="14sp"
        android:text="@string/ndd"
        android:id="@+id/textView7"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="@string/hifen"
android:layout_marginBottom="3dp"
        android:layout_marginRight="3dp"
        android:id="@+id/lblM2"
        android:layout_alignTop="@+id/textView7"
        android:layout_toRightOf="@+id/textView7"
        android:layout_toEndOf="@+id/textView7"
        android:layout_marginLeft="3dp" />
    </LinearLayout>


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/layoutm2"
    android:layout_toRightOf="@+id/layoutm2"
    android:layout_toEndOf="@+id/layoutm2"
android:layout_marginLeft="8dp"
    android:layout_alignTop="@+id/layoutm2"
    android:background="@android:color/darker_gray"
    android:id="@+id/layoutexame">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="@string/exx"
android:layout_marginBottom="3dp"
        android:id="@+id/textView9"
        android:layout_alignBottom="@+id/lblM2"
        android:layout_toRightOf="@+id/lblM2"
        android:layout_toEndOf="@+id/lblM2"
        android:layout_marginLeft="3dp"
        android:layout_alignTop="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="@string/hifen"
        android:id="@+id/lblExame"

        android:layout_alignBottom="@+id/textView9"
        android:layout_toRightOf="@+id/textView9"
        android:layout_toEndOf="@+id/textView9"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="3dp"
        android:layout_alignTop="@+id/textView9" />
</LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="@string/nff"
        android:id="@+id/textView11"
        android:layout_alignTop="@+id/layoutm2"
        android:layout_alignBottom="@+id/layoutexame"
        android:layout_toRightOf="@+id/layoutexame"
        android:layout_toEndOf="@+id/layoutexame"
        android:layout_marginLeft="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="@string/hifen"

        android:id="@+id/lblNotaFinal"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignTop="@+id/textView11"
        android:layout_toRightOf="@+id/textView11"
        android:layout_marginLeft="3dp" />

</RelativeLayout>